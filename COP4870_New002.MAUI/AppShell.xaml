<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="COP4870_New002.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:COP4870_New002.MAUI"
    xmlns:local2="clr-namespace:COP4870_New002.MAUI.Views"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Client"
        ContentTemplate="{DataTemplate local2:ClientMenuView}"
        Route="Client" />
    <ShellContent
        Title="Project"
        ContentTemplate="{DataTemplate local2:ProjectMenuView}"
        Route="Project" />
    <ShellContent
        Title="Employee"
        ContentTemplate="{DataTemplate local2:EmployeeMenuView}"
        Route="Employee" />
</Shell>

