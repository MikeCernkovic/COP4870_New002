<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="COP4870_New002.MAUI.MainPage">
            
    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Button
                Text="Client View"
                FontSize="Header"
                Clicked="ClientsClicked"
                BackgroundColor="#171717"
                BorderColor="#d2d2d2"
                BorderWidth="1"
                TextColor="#d2d2d2"/>
            <Button
                Text="Project View"
                FontSize="Header"
                Clicked="ProjectsClicked"
                BackgroundColor="#171717"
                BorderColor="#d2d2d2"
                BorderWidth="1"
                TextColor="#d2d2d2"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

